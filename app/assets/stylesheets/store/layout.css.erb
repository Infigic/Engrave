html {font-size:100.01%;}
html,body {height:100%;}

body {font:.75em/1.3 "Segoe UI","Trebuchet MS",Arial,sans-serif;color:#000;}

h1, h2, h3 {color:#000;font-weight:normal;}
h1 {margin:0 0 1.33em 0;font-size:2em;}
h2 {margin:0 0 1.33em 0;font-size:2em;}
	h1 a,
	h2 a {color:#7c7052;}
h3 {font-size:1.5em;margin:0 0 .33em 0;}
a,a span {cursor:pointer;}
a {color:#312C20;}
a:hover {color:#7c7052;text-decoration:none;}
legend {
  font-size: 150%;
  font-weight: bold;
  margin-bottom: 0.5em;
  padding-bottom: 1em !important;
}
th {text-align:left;}
p {margin-bottom:1.92em;}
.content ul {list-style:disc outside;margin-bottom:20px;padding-left:50px;}

.hidden {display:none !important;}
.important {color:#f60a00;font-weight:bold;}
.bold {font-weight:bold;}
.left {float:left;}
.right {float:right;}
.clear {clear:both;}
.artbutton {display:block;margin-left:23px;width:210px;height:48px;background:url(<%= asset_path 'button.png' %>) 100% 0 no-repeat;color:#fff;font-size:1.4em;text-decoration:none;}
	.artbutton span {display:block;position:relative;left:-23px;height:40px;padding:8px 0 0 18px;background:url(<%= asset_path 'button.png' %>) 0 0 no-repeat;}
	.artbutton i {color:#000;font-style:normal;}


/* Wrapper
------------------------------------ */
.wrapper {position:relative;width:960px;margin:0 auto;padding-bottom:20px;text-align:left;overflow:hidden;}


/* Header
------------------------------------ */
	.header {position:relative;width:955px;margin:0 auto;height:3.3em;position:relative;padding:8px 5px 10px 0;overflow:hidden;}
	.header h1 {top:11px;z-index:100;overflow:hidden;margin:0;text-indent:-9999px;}
	.header h1,
	.header h1 span {position:absolute;width:241px;height:37px;}
		.header h1 span {display:block;top:0;left:0;z-index:200;background:url(<%= asset_path 'engrave_logo.png' %>) 0 0 no-repeat;}

	/*Navigation*/
	.header .nav {float:right;overflow:hidden;clear:right;padding-top:.5em;}
		.header .nav li {float:left;padding-left:20px;font-size:1.42em;}
		.header .nav a {text-decoration:none;}
		.header .nav a:hover {text-decoration:underline;}
	.header .userpanel {float:right;overflow:hidden;clear:right;margin-right:-6px}
		.header .userpanel li {float:left;padding:0 6px 0 5px;border-left:1px solid #312C20;margin-left:-1px;font-size:1.2em;line-height:1.2em;}
		.header .userpanel a {text-decoration:none;}
		.header .userpanel a:hover {text-decoration:underline;}


/* Main
------------------------------------ */
.main {position:relative;width:100%;/*overflow:hidden;*/}
.innerpage  {background:url(<%= asset_path 'shadow-r.png' %>) 100% 0 repeat-y;}

	.main .content-wrapper {position:relative;float:left;width:100%;z-index:200;margin-bottom:-5px;}

	.main .aside,
	.main .extra {position:relative;float:left;overflow:hidden;z-index:200;}
	.main .extra {width:270px;margin:15px 0 0 -100%;padding-right:5px;margin-bottom:-5px;}
	.main .aside {width:185px;padding:0 20px 25px 20px;margin:21px 0 21px -225px;padding-bottom:40px;margin-bottom:-5px;}
	.content {overflow:hidden;}
	
	.innerpage  .extra {width:175px;border-right:1px solid #d7d7d7;margin-top:5px;padding:18px 0 0 5px;overflow:visible;background:url(<%= asset_path 'shadow-l.png' %>) 0 0 repeat-y;}
	.innerpage  .content {border-left:1px solid #d7d7d7;margin:0 0 0 180px;padding:0 23px 23px 23px;}

	/* 2 Column settings (left col) - default */
	.content {margin:15px 0 0 275px;}
	
	/* 1 Column */
	.onecol .content {margin:0;border-left:none;}
	
	/* 3 Column settings */
	.threecol .content {margin:15px 225px 0 275px;}

	/* 2 Column settings (right col) */
	.twocol-r .content {margin:15px 225px 0 0;}
	
		
/* Navigations
----------------------*/
ul.nav, ul.userpanel {
  margin: 0px;
}
.taxons-list {list-style-image:none;list-style-position:outside;list-style-type:none;margin:0 0 1.5em 0;}
	.taxons-list li {margin:0;color:#545454;font-size:1.5em;line-height:2.2em;}
		.taxons-list li a {color:#545454;display:block;line-height:2.5em;overflow:hidden;padding:0 20px;text-decoration:none;white-space:nowrap;color:#545454;line-height:2.2em;}
		.taxons-list li a:hover {background:url(<%= asset_path 'menu_hover.png' %>) 100% 50% no-repeat;}
	.taxons-list li.current {margin-right:-13px;}
		.taxons-list li.current a {background:url(<%= asset_path 'menu_current.png' %>) 100% 50% no-repeat;overflow:hidden;white-space:nowrap;}
	.taxons-list a.root {color:#545454;line-height:2.2em;}
        .taxonomy-root { margin-left: 10px;}

	
/* Shadow */
.box {position:relative;margin-bottom:15px;background:url(<%= asset_path 'shadow-l.png' %>) 0 0 repeat-y;}
.innerpage .box {margin-bottom:-5px;}
.shadow-r {background:url(<%= asset_path 'shadow-r.png' %>) 100% 0 repeat-y;padding:18px 0 0 0;overflow:hidden;position:relative;}
.shadow-t {background:url(<%= asset_path 'shadow.png' %>) 100% -10px no-repeat;height:10px;}
	.shadow-t i {display:block;background:url(<%= asset_path 'shadow.png' %>) -10px 0 no-repeat;height:10px;width:10px;}
.shadow-b {background:url(<%= asset_path 'shadow.png' %>) 100% -20px no-repeat;height:10px;/*margin-top:-5px;*/clear:both;position:relative;bottom:0;z-index:100;}
	.shadow-b i {display:block;background:url(<%= asset_path 'shadow.png' %>) 0 0 no-repeat;height:10px;width:10px;}

		
/* Forms
---------------------*/	
dl.table-display dt {
width: 100px;
}
dl.table-display dd {
width: 180px;
}
dl.table-display dt, dl.table-display dd {
    float: left;
    margin: 0;
    padding: 5px;
    border-top: 1px solid #DDD;
}

/* Footer
---------------------*/
.footer {position:absolute;left:0;z-index:100;width:100%;height:1em;overflow:hidden;padding:11px 0;padding:.5em 0 4.17em;color:#fff;background:#7c7052;}
	.footer .inner {width:960px;margin:0 auto;}
	.footer p {margin-bottom:0;}
	.footer a {color:#fff;}
	.footer .nav {float:right;overflow:hidden;}
		.footer .nav li {float:left;padding:0 5px 0 4px;border-left:1px solid #fff;margin-left:-1px;}
	.footer .copyright {float:right;padding-right:4px;border-right:1px solid #fff; margin: 0;}


.flash.error { color: red; }
